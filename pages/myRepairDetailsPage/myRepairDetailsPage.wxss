/* pages/myRepairDetailsPage/myRepairDetailsPage.wxss */
page{
  background: #f7f7f7
}

.header{
  margin-top: 20rpx;
  width: 100%;
  height: 100rpx;
  background: white;
  position: relative;
}
.header text{
  line-height: 100rpx;
  padding-left: 30rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.title{
  display: block;
  padding: 30rpx;
  font-size: 30rpx;
  word-wrap:break-word;
  word-break: break-all;
}

 .scroll-view{
    display: flex;
    white-space: nowrap;
    height: 240rpx;
    width: 690rpx;
    margin: 0 auto;
    /* background: rebeccapurple; */
  }
  .scroll-view image{
    margin-top: 10rpx;
    width: 260rpx;
    height: 200rpx;
    margin-right: 20rpx;
  }
  .footer{
    background: white;
    padding-top: 30rpx;
  }
  .footerOne{
    width: 690rpx;
    margin: 0 auto;
    border-bottom: 1rpx solid #e1e1e1;
    
  }
  .footerOne view{
    padding-bottom: 10rpx;
  }
  .footerHeader{
    font-size: 30rpx;
    font-weight: bold;
  }
  .left{
    font-size: 27rpx;
  }
  .right{
    font-size: 27rpx;
    float: right;
  }
  .footerTwo{
    padding-top: 30rpx;
    border-bottom:none;
  }

  .bottom{
    margin-bottom:  20rpx;
  }

  .callImage{
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    right: 40rpx;
    top: 30rpx;
  }
  