/* pages/myRepairDetailsPage/myRepairDetailsPage.wxss */
page{
  background: #f7f7f7
}

.header{
  margin-top: 20rpx;
  width: 100%;
  height: 100rpx;
  background: white;
  position: relative;
}
.header text{
  line-height: 100rpx;
  padding-left: 30rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.title{
  display: block;
  padding: 30rpx;
  font-size: 30rpx;
  word-wrap:break-word;
  word-break: break-all;
}
.scroll-view{
  display: flex;
  white-space: nowrap;
  height: 240rpx;
  width: 690rpx;
  margin: 0 auto;
}
.scroll-view image{
  margin-top: 10rpx;
  width: 260rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.footer{
  background: white;
}
.footerOne{
  width: 690rpx;
  margin: 0 auto;
  border-bottom: 1rpx solid #e1e1e1;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.content_title {
  font-size: 30rpx;
  color: #222222;
  font-weight: bold;
}
.content_name {
  padding-top: 30rpx;
}
.content_name text {
  font-size: 28rpx;
  color: #222222;
}
.right{
  float: right;
}

.bottom{
  margin-bottom:  20rpx;
}

.callImage{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  right: 40rpx;
  top: 30rpx;
}
  