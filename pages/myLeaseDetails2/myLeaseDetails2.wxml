<!--pages/myLeaseDetails/myLeaseDetails.wxml-->
<view class='wrapper'>
  <!-- 我的预约详情 -->
    <view class='wrapper-jx'>

          <block>
            <view class='jxfy'>{{leaseDetail.statusName}}</view>
            <view bindtap='callPhone' class='jxfy-right'><image src='../../img/my/bb_wd_01@2x.png'></image></view>
          </block>
          <view class='wrapper-item'>
          <view class='left-item'>
            <image src='{{leaseDetail.firstPictures}}'></image>
          </view>

          <view class='right-item'>
            <view class='nowrap'>{{leaseDetail.houseName}}</view>
            <view class='nowrap'>{{leaseDetail.houseInfo}}</view>
            <!-- <view class='nowrap'>{{leaseDetail.layout}}</view> -->
            <view class='nowrap'>
              <!-- <block wx:for='{{reservation.label}}' wx:key='key'> -->
                <!-- 后台要求写死 -->
                <text class='label-item'>在线支付</text>
              <!-- </block> -->
            </view>
             <text class='label-right-item'>{{leaseDetail.rentCost}}元/月</text>
            </view>
            <view class='bottom-view'></view>
          </view>
    </view>

    <view class='reservationDetail'>
      <view class='reservationDetail-item'>
        <view class='heaerTitle' style='font-weight: bold'>租约信息</view>
        <view class='clear_fix'><view class='Detail-left'>起止时间</view><view class='Detail-right'>{{leaseDetail.startTime}} 至 {{leaseDetail.endTime}}</view></view>deposit
        <view class='clear_fix'><view class='Detail-left'>付款方式</view><view class='Detail-right'>付{{leaseDetail.payment}}押{{leaseDetail.deposit}}</view></view>
        <view class='clear_fix'><view class='Detail-left'>租金</view><view class='Detail-right'>{{leaseDetail.signList.rentCost}}元/月</view></view>
        <view class='clear_fix'><view class='Detail-left'>房屋押金</view><view class='Detail-right'>{{leaseDetail.signList.depositCost}}元</view></view>
        <!-- <view class='clear_fix'><view class='Detail-left'>电器押金</view><view class='Detail-right'></view></view> -->
        <view class='clear_fix'><view class='Detail-left'>下期收租日</view><text class='Detail-right'>{{leaseDetail.nextDate}}</text></view>
      </view>

       <view class='reservationDetail-item'>
          <view class='heaerTitle' style='font-weight: bold'>承租人信息</view>
          <view class='clear_fix'><view class='Detail-left'>姓名</view><view class='Detail-right'>{{leaseDetail.tenant}}</view></view>
          <view class='clear_fix'><view class='Detail-left'>性别</view><view class='Detail-right'>{{leaseDetail.sexName}}</view></view>
          <view class='clear_fix'><view class='Detail-left'>手机号码</view><view class='Detail-right'>{{leaseDetail.phone}}</view></view>
          <view class='clear_fix'><view class='Detail-left'>身份证</view><view class='Detail-right'>{{leaseDetail.idNumber}}</view></view>
      </view>

         <view class='reservationDetail-item'>
          <view class='heaerTitle' style='font-weight: bold'>房东信息</view>
          <view class='clear_fix'><view class='Detail-left'>姓名</view><view class='Detail-right'>{{name}}</view></view>
      </view>

        <view class='reservationDetail-item reservationDetail-three'>
          <view class='heaerTitle' style='font-weight: bold'>其他信息</view>
          <view class='clear_fix'><view class='Detail-left'>租约编号</view><view class='Detail-right'>{{leaseDetail.leaseCode}}</view></view>
          <view class='clear_fix'><view class='Detail-left'>创建时间</view><view class='Detail-right'>{{leaseDetail.signList.signTime}}</view></view>
      </view>

    </view>

    
  
</view>
