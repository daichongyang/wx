<!--pages/adminLeaseListPage/adminLeaseListPage.wxml-->

<view class='header'>
  <view class='gray10'></view>
  <view class='header_cont'>
    <view class='sx_item'>
      <picker bindchange='bindchangesxArray' value="0" range="{{sxArray}}">
        <view class='sx_item'>
          租约状态
          <text class='arrow-down'></text>
          </view>
      </picker>
    </view>
    <view class='sx_item'>
      <picker bindchange='bindchangeApartment' value="0" range="{{apartmentArr}}" range-key="{{'name'}}">
        <view class='sx_item'>
          合同类型
          <text class='arrow-down'></text>
          </view>
      </picker>
    </view>
    <view class='sx_item'>更多筛选
      <text class='arrow-down'></text>
    </view>
  </view>
</view>

<scroll-view class='scrollView' scroll-y='true' enable-back-to-top='true'>
  <block  wx:for='{{dataList}}' wx:key='key' wx:for-index='id'>
    <view class='itemBox'>
      <view class='titel'>
        <text class="houseName">{{item.houseName}}</text>
        <block wx:if="{{item.status == '签约成功'}}">
            <text class='titleRightOne'>{{item.status}}</text>
        </block>
        <block wx:else>
          <text class='titleRightTwo'>{{item.status}}</text>
        </block>                
      </view>
      <view class="middle_container">
        <view class='content'>租期:{{item.startTime}}-{{item.endTime}}</view>
        <view class='tenant'>签约人:{{item.creatorName}}</view>
        <view class='bqcontent'>{{item.contractType}}</view>
      </view>
      <view class='foot'>
        <text data-index="0" data-id="{{id}}" bindtap='ydXqClick'>租约详情</text>
        <text data-index="1" data-id="{{id}}" bindtap='ydXqClick'>查看合同</text>
        <text data-index="2" data-id="{{id}}" bindtap='ydXqClick'>查看账单</text>
      </view>
    </view>
  </block>
  <view bindtap='loadMoreClick' class='footerLoad' wx:if='{{show}}'>{{showTitel}}</view>
  <view class='footerLoad' wx:else>{{noShowTitel}}</view>        
</scroll-view>
