/* pages/roomStatePage/roomStatePage.wxss */
page{
  background: #f7f7f7;
}

.header{
  position: fixed;
  top: 10rpx;
  display: -webkit-flex; /* Safari */
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 60rpx;
  align-items: center;
  background: white;
  left: 0;
  right: 0;
  border-bottom: 1rpx solid #e1e1e1
}
.xqCssBox{
  position: fixed;
  top: 80rpx;
  width: 100%;
  height: 180rpx;
  background: white;
}
.header text{
  text-align: center;
  flex-grow: 1;
  font-size: 30rpx;
  border-right: 1rpx solid #e1e1e1;
}
.maskView{
  width: 100%;
  position: fixed;
  top: 80rpx;
  bottom: 0;
  background: rgba(1, 1, 1, 0.3);
}

.xsItem{
  background: white;
  text-align: center;
  padding: 10rpx;
  border-bottom: 1rpx solid #f1f1f1;
  font-size: 30rpx;
  color: darkgrey
}

.houseHeaderItem{
  font-size: 30rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 30rpx;
  background: white;
}
.floorItemItem{
  font-size: 28rpx;
  color: darkgray;
  text-align: center;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
}
.scrollViewOne{
  position: fixed;
  width: 100%;
  bottom: 0;
  top: 80rpx;
}
.scrollViewTwo{
  position: fixed;
  width: 100%;
  bottom: 0;
  top: 270rpx;
}

.houseItem{
  display: inline-block;
  width: 225rpx;
  height: 150rpx;
  background: #41cac0;
  margin-left: 20rpx;
  border-radius:0px 10px 10px 10px;
}