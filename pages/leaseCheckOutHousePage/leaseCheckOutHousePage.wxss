page {
  background: #f7f7f7;
}

.swiper {
  margin-top: 20rpx;
  font-size: 30rpx;
  background: white;
}

.textview {
  height: 150rpx;
}

.middle-view {
  padding-top: 20rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  border-bottom: 1rpx solid #e1e1e1;
}

.content-view {
  display: flex;
  margin-top: 20rpx;
  border-bottom: 1rpx solid #e1e1e1;
}

.content-item {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.content-right {
  margin-left: 20rpx;
}

.none-view {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.delete-view {
  margin-left: 20rpx;
  font-size: 28rpx;
  background-color: #1fc2b1;
  color: white;
