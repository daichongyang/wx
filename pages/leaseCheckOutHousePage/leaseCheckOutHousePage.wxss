  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
}

.amount-view {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  background-color: rgb(218, 218, 218);
}

.amount-view text {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.add-button {
  background-color: #1fc2b1;
  width: 150rpx;
  height: 44rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: white;
