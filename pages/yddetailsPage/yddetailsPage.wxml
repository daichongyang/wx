<view class='wrapper'>
  <!-- 我的预约详情 -->
    <view class='wrapper-jx'>

          <block wx:if='{{reservation.signStatus == 1}}'>
            <view class='jxfy'>已签约</view>
                <view bindtap='callPhone' class='jxfy-right'><image src='../../img/my/bb_wd_01@2x.png'></image></view>
          </block>

           <block wx:elif='{{reservation.signStatus == 2}}'>
            <view class='jxfy'>已过期</view>
          </block>

           <block wx:elif='{{reservation.signStatus == 0 && reservation.payStatus == 0}}'>
            <view class='jxfy'>待支付</view>
                <view bindtap='callPhone' class='jxfy-right'><image src='../../img/my/bb_wd_01@2x.png'></image></view>
          </block>

           <block wx:elif='{{reservation.signStatus == 0 && reservation.payStatus == 1}}'>
            <view class='jxfy'>预定成功</view>
                <view bindtap='callPhone' class='jxfy-right'><image src='../../img/my/bb_wd_01@2x.png'></image></view>
          </block>

          <view class='wrapper-item'> 
          <view class='left-item'>
            <image src='{{reservation.picture}}'></image>
          </view>

          <view class='right-item'>
            <view class='nowrap'>{{reservation.name}}</view>
            <view class='nowrap'>{{reservation.layout}}</view>
            <view class='nowrap'>{{reservation.nearby}}</view>
            <view class='nowrap'>
              <block wx:for='{{reservation.label}}' wx:key='key'>
                  <text class='label-item'>{{item}}</text>
              </block>
            </view>
             <text class='label-right-item'>{{reservation.rentCost}}元/月</text>
            </view>
            <view class='bottom-view'></view>
          </view>
    </view>

    <view class='reservationDetail'>
      <view class='reservationDetail-item'>
        <view class='heaerTitle' style='font-weight: bold'>预定信息</view>
        <view class='clear_fix'><view class='Detail-left'>预定房型</view><view class='Detail-right'>{{reservation.layout}}</view></view>
        <view class='clear_fix'><view class='Detail-left'>最晚签约时间</view><view class='Detail-right'>{{reservationDetails.latestTime}}</view></view>
        <view class='clear_fix'><view class='Detail-left'>定金</view><view class='Detail-right'>{{reservationDetails.advanceCost}}</view></view>
        <view class='clear_fix'><view class='Detail-left'>约定租金</view><view class='Detail-right'>{{reservationDetails.rentCost}}</view></view>
        <view class='clear_fix'><view class='Detail-left'>约定租期</view><view class='Detail-right'>{{reservationDetails.startTime}}至{{reservationDetails.endTime}}</view></view>
        <view class='clear_fix'><view class='Detail-left'>留言</view><text decode="true" class='text'>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{reservationDetails.remark}}</text></view>
      </view>

       <view class='reservationDetail-item'>
          <view class='heaerTitle' style='font-weight: bold'>预约人信息</view>
          <view class='clear_fix'><view class='Detail-left'>姓名</view><view class='Detail-right'>{{reservationDetails.promiseMan}}</view></view>
          <view class='clear_fix'><view class='Detail-left'>手机号码</view><view class='Detail-right'>{{reservationDetails.phone}}</view></view>
      </view>

        <view class='reservationDetail-item reservationDetail-three'>
          <view class='heaerTitle' style='font-weight: bold'>其他信息</view>
          <view class='clear_fix'><view class='Detail-left'>预定单编号</view><view class='Detail-right'>{{reservationDetails.orderNo}}</view></view>
          <view class='clear_fix'><view class='Detail-left'>创建时间</view><view class='Detail-right'>{{reservationDetails.gmtCreate}}</view></view>
      </view>

    </view>

    
    <block wx:if='{{reservation.signStatus == 1}}'>
          <view class='bootm-foot-box'>
            <view class='bootm-foot'>
              <view>查看合同</view><view>租约详情</view>
            </view>
          </view>
    </block>

    <block wx:elif='{{reservation.signStatus == 0 && reservation.payStatus == 0}}'>
      <view class='bootm-foot-two'>
        <view bindtap='gochoisePay'>支付定金</view>
      </view>
    </block>


  
</view>