/* pages/manageInforList/manageInforList.wxss */

.item{
  width: 100%;
  height: 160rpx;
  position: relative;
  border-bottom: 1rpx solid #e1e1e1
}
.img_view{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: 30rpx;
  left:30rpx;
}
.item image{
  width: 100%;
  height:100%;
}

.item-top{
  position: absolute;
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  left: 150rpx;
  top: 30rpx;
  font-size: 30rpx;
}
.item-right{
  position: absolute;
  width: 400rpx;
  height: 50rpx;
  right: 30rpx;
  top: 30rpx;
  font-size: 30rpx;
  color: darkgray;
  text-align: right;
  line-height: 50rpx;
}
.item-bottom{
  position: absolute;
  width: 550rpx;
  height: 50rpx;
  line-height: 50rpx;
  left: 150rpx;
  bottom: 30rpx;
  font-size: 30rpx;
  color: darkgray;

  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden
}
.biaoji{
  position:absolute;
  top:-15rpx;
  left:80rpx;
  background:#fe615a;
  border:1px solid #fff;
  border-radius:30rpx;
  font-size:20rpx;
  color:#fff;
  padding:5rpx 9rpx;
}