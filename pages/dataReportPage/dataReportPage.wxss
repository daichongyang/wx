  width: 95%;
  margin: 0 auto;
  background: white;
  margin-top: 50rpx;
  border-radius: 10rpx;
}
.mxTitleCss{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  border-bottom: 2rpx solid #e1e1e1;
}
.dayItem {
  border-bottom: 2rpx solid #1fc2b2;
