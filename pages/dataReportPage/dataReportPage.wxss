page{
  background: #f7f7f7;
}

.headerBox{
  position: fixed;
  top: 10rpx;
  display: -webkit-flex; /* Safari */
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 80rpx;
  align-items: center;
  background: white;
  left: 0;
  right: 0;
   
