  text-align: center;
  flex-grow: 1;
  font-size: 30rpx;
  line-height: 80rpx;
  color: #222222;
}
.textCss1{
    border-bottom: 5rpx solid #1fc2b2

}
.textCss2{
    border-bottom: none
}

.swiper{
  position: fixed;
  top: 90rpx;
}
.scrollView{
  width: 100%;
  height: 100%;
}





/* 总账单 */
.zzdCss{
  margin-top: 30rpx;
  text-align: center;
  padding: 25rpx;
  font-size: 30rpx;
}
