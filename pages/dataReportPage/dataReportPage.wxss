}


/* 日报月报 */
.rbybCssBox{
  width: 80%;
  margin: 0 auto;
  text-align: center;
  margin-top: 50rpx;
}
.rbybCssBox text{
  display: inline-block;
  width: 50%;
  text-align: center;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.rbybCssBox text:nth-child(1){
  border-top-left-radius: 15rpx;
  border-bottom-left-radius: 15rpx;

}
.rbybCssBox text:nth-child(2){
  border-top-right-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
}

.itemOneCss{
  background: #1fc2b1;
  color: white;
}
.itemTwoCss{  
  background: white;
  color: black;
}

/* 日报月报明细 */
