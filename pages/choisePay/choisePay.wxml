<!--pages/choisePay/choisePay.wxml-->
<view class='contant'>
  <view class='gray'></view>

  <!-- 支付金额 -->

  <view class='pay_money'>
    <view>
      <text>账单金额</text>
      <text class='red_money'>￥{{payMoney}}</text>
    </view>
    <view class='pay_money_view' wx:if="{{agent}}">
      <text>服务费</text>
      <text class='red_money'>￥{{showagent}}</text>
    </view>
  </view>
  <view class='gray'></view> 

<!-- 选择需要支付的支付方式 -->

  <view class='choise_car'>
    <view class='item'>
      <view class='item_view'>
        <image class='choise_img' bindtap='getStatusCar' mode="widthFix" src='{{choiseCar}}'></image>
        <text>工商银行信用卡 ({{accNo}}）</text>
      </view>
      <view class='green' bindtap='bindingCarNext'>更换</view>
    </view>
    <!-- <view class='item'>
      <text>扫码支付</text>
    </view> -->
    <view class='item calcel_bottom'>
      <view class='item_view'>
        <image class='choise_img' bindtap='getstatusWx' mode="widthFix" src='{{choiseWx}}'></image>
        <text>微信支付</text>
      </view>
    </view>
  </view>

  <!-- 去付款 -->
  <button loading="{{loadii}}" disabled="{{disable}}" class='button' bindtap='payClick'>去支付</button>

</view>
 