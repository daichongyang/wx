/* pages/myRepairListPage/myRepairListPage.wxss */
page{
  background: #f7f7f7;
}

.noDataListCss{
  width: 100%;
  height: 300rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 300rpx;
}

.indexView{
  width: 100%;
  height: 120rpx;
  /* background: red; */
}

.applyCss{
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0rpx;
  background: white;
  border-top: 1rpx solid #e1e1e1
}
.applyCss view{
  margin: 0 auto;
  text-align: center;
  width: 95%;
  height: 100rpx;
  margin-top: 10rpx;
  background: #1fc2b2;
  line-height: 100rpx;
  color: white;
  font-size: 30rpx;
  border-radius: 8rpx;
}

.swiper{
  background: white;
  margin-top: 20rpx;

}
.header{
  height: 100rpx;
  line-height: 100rpx;
  font-weight: bold;
  padding-left: 30rpx;
  font-size: 30rpx;
}
.content{
  background: #f7f7f7;
  padding-top: 20rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 20rpx;
  /* word-wrap:break-word;
  word-break: break-all; */
}
.content-item{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden
}
.content-item:nth-child(1){
  font-size: 32rpx;
}
.content-item:nth-child(2){
  font-size: 28rpx;
  color: darkgray;
  padding-top: 10rpx;

}
.content-item:nth-child(3){
  font-size: 28rpx;
  color: darkgray;
  padding-top: 10rpx;

}
.footerBox{
  height: 100rpx;
  line-height: 100rpx;
  font-weight: bold;

}

.footer{
  float: right;
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin-right: 30rpx;
  border-radius: 8rpx;
  background: #e0f3f2;
  color: #518e8a;
  font-size: 25rpx;
  margin-top: 20rpx;
}