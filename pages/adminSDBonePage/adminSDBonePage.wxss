/* pages/adminSDBonePage/adminSDBonePage.wxss */
page{
 background: #f7f7f7; 
}

.nodata{
  line-height: 200rpx;
  font-size: 30rpx;
  color: darkgray;
  text-align: center;
}

.header{
  position: fixed;
  top: 0;
   border-bottom: 1rpx solid #e1e1e1;
  display: -webkit-flex; /* Safari */
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  left: 0;
  right: 0;
}
.header text{
  display: inline-block;
  text-align: center;
  color: darkgray;
  font-size: 25rpx;
  height: 80rpx;
  line-height: 80rpx;
  flex-grow: 1;
   width: 150rpx;

}
.scrollView{
  position: absolute;
  top: 80rpx;
  bottom: 0rpx;
  width: 100%;
}
.itemBox{
  margin-top: 3rpx;
  border-bottom: 1rpx solid #e1e1e1;
  background: white;
  display: -webkit-flex; /* Safari */
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: white;
  left: 0;
  right: 0;
  bottom: 0rpx;
}
.item {
  display: inline-block;
  text-align: center;
  font-size: 25rpx;
  flex-grow: 1;
  width: 140rpx;
  margin-left: 10rpx;
}

.oneItem view{
  background: #f7f7f7;
  border-radius: 8rpx;
  border: 1rpx solid darkgray;
  padding: 8rpx 0rpx;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
}
.twoItem view{
  border: 1rpx solid #00b26a;
  background:white;
  padding: 0rpx 0rpx;
  margin-top: 5rpx;
}
input{
  width: 100%;
  height: 100%;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
}
.save{
  width: 100rpx;
  background: #1fc2b2;
  color:white;
  padding: 10rpx;
  border-radius: 8rpx;
  margin-left: 5rpx;
}