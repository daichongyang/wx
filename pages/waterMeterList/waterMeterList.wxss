/* pages/waterMeterList/waterMeterList.wxss */
page{
  background: #f7f7f7
}
.waterMeter-box{
  margin-top: 20rpx;
  width: 100%;
  background: white;
}
.header{
  height: 100rpx;
  font-size: 30rpx;
  font-weight: bold;
  position: relative

}
.header image{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 35rpx;
  left: 30rpx;
}
.header text{
  width: 650rpx;
  height: 100rpx;
  line-height: 100rpx;
  position: absolute;
  left: 80rpx;
}
.content{
  background: #f7f7f7;
  font-size: 28rpx;
  color: black;
  padding-left: 30rpx;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
}
.content-item{
  margin-top: 10rpx;
}
.text-right{
  float: right;
  padding-right: 30rpx;
}
.footer{
  height: 100rpx;
  font-size: 30rpx;
  position: relative;
}
.footer view{
  position: absolute;
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  background: #e0f3f2;
  color: #518e8a;
  border-radius: 8rpx;
  top:20rpx;
  right: 30rpx;
}

.noListCss{
  width: 100%;
  height: 300rpx;
  text-align: center;
  line-height: 300rpx;
  font-size: 30rpx;
}