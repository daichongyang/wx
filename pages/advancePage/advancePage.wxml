<view class='wrapper' wx:if='{{reservationlist.length > 0}}'>
  <!-- 我的预约列表 -->
  <block wx:for='{{reservationlist}}' wx:key='key'>
    <view class='wrapper-jx'>
          <block wx:if='{{item.signStatus == 1}}'>
            <view class='jxfy'>已签约</view>
          </block>
          <block wx:if='{{item.signStatus == 3}}'>
            <view class='jxfy'>已撤销</view>
          </block>

           <block wx:elif='{{item.signStatus == 2}}'>
            <view class='jxfy'>已过期</view>
          </block>

           <block wx:elif='{{item.signStatus == 0 && item.payStatus == 0}}'>
            <view class='jxfy'>待支付</view>
          </block>

           <block wx:elif='{{item.signStatus == 0 && item.payStatus == 1}}'>
            <view class='jxfy'>预定成功</view>
          </block>

          <view class='wrapper-item'>
            <view class='left-item'>
              <view><image src='{{item.picture}}'></image></view>
            </view>
            <view class='right-item'>
            <view class='nowrap'>{{item.name}}</view>
            <view class='nowrap'>{{item.nearby}}</view>
            <view class='nowrap'>{{item.layout}}</view>
            <view class='nowrap'>
              <block wx:for='{{item.label}}' wx:key='key'>
                <block wx:if='{{0<=index && index <= 2}}'>
                  <text class='label-item'>{{item}}</text>
                </block>
              </block>
               <block wx:if='{{!item.label}}'>
                  <text class='label-item'>无标签</text>
              </block>
            </view>
             <text class='label-right-item'>{{item.rentCost}}元/月</text>
          </view>
          </view>

          <block wx:if='{{item.signStatus == 1}}'>
            <view class='jxfy ckxq-box'>
            <view bindtap='reservationDetailsClick' data-id='{{index}}' class='ckxq'>查看详情</view>
            <view bindtap='lookContractClick' data-id='{{index}}' class='ckxq chxq-two'>查看合同</view>
            <view bindtap='leaseClick' data-id='{{index}}' class='ckxq chxq-three'>租约详情</view>
            </view>
          </block>
          <block wx:elif='{{item.signStatus == 0 && item.payStatus == 0}}'>
          <view  class='jxfy ckxq-box'>
            <view bindtap='reservationDetailsClick' data-id='{{index}}' class='ckxq'>查看详情</view>
            <view bindtap='gochoisePay' data-id='{{index}}' class='ckxq chxq-two'>去支付</view>
            </view>
          </block>
          <block wx:else>
            <view  class='jxfy ckxq-box'>
            <view bindtap='reservationDetailsClick' data-id='{{index}}' class='ckxq'>查看详情</view>
            </view>
          </block>
    </view>
  </block>
  <view bindtap='refreshClick' class='refreshClick' hidden='{{refreshFlag}}'>点击加载更多</view>
</view>

<view wx:else class='noReservationlist'>空空如也</view>
