.changeInfo{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 90%;
  margin: 50rpx auto;
  font-size: 30rpx;
}
.changeInfoName{
  position: relative;
  height: 100rpx;
  width: 100%;
  background: #fff;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #bbb;
}
.codeBtn{
  position: absolute;
  top: 10rpx;
  right: 0;
  color: #bbb;
  width: 30%;
  font-size: 26rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.changeInfoName input{
  width: 100%;
  height:100%;
}
.changeBtn{
  width: 100%;
  margin-top: 50rpx;
  background: #1fc2b1;
  color: white;
}